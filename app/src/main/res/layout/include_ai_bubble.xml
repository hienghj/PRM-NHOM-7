<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aiBubbleContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="80dp"
    android:elevation="100dp"
    android:translationZ="100dp">

    <ImageView
        android:id="@+id/ivAiBubble"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/bg_ai_bubble"
        android:src="@drawable/ic_robot"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:contentDescription="ai"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:alpha="1.0"
        android:elevation="101dp" />

    <!-- Popup menu container - appears above the bubble vertically -->
    <LinearLayout
        android:id="@+id/aiMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:background="@drawable/bg_ai_menu"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:elevation="12dp"
        android:minWidth="200dp">

        <TextView
            android:id="@+id/btnCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="So sánh sản phẩm"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_ai_menu_item_ripple" />
            
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light" />
            
        <TextView
            android:id="@+id/btnAnalyze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phân tích sản phẩm bằng AI"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_ai_menu_item_ripple" />
            
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light" />
            
        <TextView
            android:id="@+id/btnChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat với AI"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_ai_menu_item_ripple" />
    </LinearLayout>

</FrameLayout>

