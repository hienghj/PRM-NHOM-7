<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="So sánh sản phẩm"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập ID hoặc chọn sản phẩm để so sánh"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/etProductId1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID sản phẩm thứ nhất"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/bg_otp_box"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etProductId2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID sản phẩm thứ hai"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/bg_otp_box"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:textColor="@color/text_primary"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnCompareAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="So sánh"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_send_button"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>

